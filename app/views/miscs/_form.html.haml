= form_for @misc do |f|
  - if @misc.errors.any?
    #error_explanation
      %h2= "#{pluralize(@misc.errors.count, "error")} prohibited this misc from being saved:"
      %ul
        - @misc.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :babble
    = f.text_area :babble
  .actions
    = f.submit 'Save'
